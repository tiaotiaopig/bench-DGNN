    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: run_exp.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/experiment/run_exp.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["--config_file", "${workspaceFolder}/experiment/config/quick.yaml"]
        }
    ]
}